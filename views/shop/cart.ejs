<%- include('../includes/head.ejs') %>
  </head>
  <body>
    <%- include('../includes/navigation.ejs') %>
    <main class="main">
     <% if (products.length > 0) { %>
      <ul>
        <% products.forEach(product => { %>
          <li class="main-list">
            <p><%= product.title %> (<%= product.quantity %>)</p>
            <form action="/cart-delete-item" method="post">
              <input type="hidden" value="<%= csrfToken %>" name="_csrf">
              <input type="hidden" value="<%= product._id %>" name="productId">
              <button class="btn btn-delete" type="submit">Delete</button>
            </form>
          </li>
        <% }) %>
      </ul>
      <div class="center">
        <form method="post" action="/create-order">
          <input type="hidden" value="<%= csrfToken %>" name="_csrf">
          <button class="btn btn-outline" type="submit">Order Now!</button>
        </form>
      </div>
     
    <% } else { %>
      <div class="box">
        <div class="inner">
          <p class="empty-title">No Products in Carts!</p>
          <p class="empty-message">We couldn't find any products to display right now. <a href="/">Go to shop page</a></p>
        </div>
      </div>
    <% } %>

    </main>
    <%- include('../includes/end.ejs') %>