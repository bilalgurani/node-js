<%- include('../includes/head.ejs') %>
</head>
<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="main">
    <div class="box">
      <div class="inner">
        <p class="title"><%= prods.title %></p>
          <div class="image-container">
            <img class="product-img" src="/<%= prods.imageUrl %>" alt="<%= prods.imageUrl %>">
          </div>
          <p class="price">$<%= prods.price %></p>
          <p class="description"><%= prods.description %></p>
          <% if (isAuthenticated) { %>
          <%- include("../includes/add-to-cart.ejs"), {prods: prods} %>
          <% } %>
      </div>
    </div>
  </main>
  <%- include('../includes/end.ejs') %>